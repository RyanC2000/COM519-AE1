<style>
  body {
    background-color: rgb(53, 53, 53);
  }

  .container {
    background-color: rgb(56, 67, 83);
    color: white !important;
    overflow: hidden;
    padding: 0;
    min-height: 100%;
  }

  .btn {
    background-color: rgb(25, 211, 170);
    color: white;
    border: none;
    margin: 2px;
  }

  .table {
    color: white !important;
  }

  #footer {
    background-color: rgb(21, 31, 46) !important;
    color: white !important;
    padding-top: 2%;
    padding-bottom: 2%;
  }

  h1 {
    margin-top: 2%;
    margin-bottom: 2%;
  }

  .btn-danger {
    background-color: rgb(235, 92, 92) !important;
  }
</style>

<body>

  <%- include('common/header'); -%>

    <div class="container min-vh-100">
      <h1 class="text-center"> Add Task </h1>
      <div class="row justify-content-md-center">
        <div class="col-">

          <form method="POST" action="/add-task">

            <div class="form-group">
              <label for="task_description"> Task Description</label>
              <input type="text" class="form-control" id="task_description" name="task_description" placeholder="Describe the task" />
              <label for="task_description"> Deadline</label>
              <input type="date" class="form-control" id="deadline" name="deadline"/>
              <input type="hidden" class="form-control" id="user_id" name="user_id" value="<%= user.email %>"/>
              <% if (errors['name']) { %>
                <p style="color: red">
                  <%= errors['name'].message %>
                </p>
                <% } %>
            </div>

            <button type="submit" class="btn btn-primary"> Add Task </button>

          </form>
        </div>
      </div>
    </div>
    <%- include('common/footer'); -%>
</body>

</html>